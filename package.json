{
  "name": "vendly",
  "version": "2.1.0",
  "description": "Enterprise POS system with Next.js frontend and FastAPI backend",
  "author": "Bharadhwaj Allapuram",
  "private": true,
  "workspaces": [
    "client",
    "shared"
  ],
  "scripts": {
    "start": "npm run dev",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && python -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "build": "npm run build:client",
    "build:client": "cd client && npm run build",
    "install:client": "cd client && npm install",
    "install:server": "cd server && pip install -r requirements.txt",
    "setup": "npm run install:client && npm run install:server",
    "lint": "npm run lint:client",
    "lint:client": "cd client && npm run lint",
    "format": "npm run format:client",
    "format:client": "cd client && npm run lint -- --fix",
    "test": "npm run test:client",
    "test:client": "cd client && npm run test",
    "type-check:client": "cd client && npx tsc --noEmit",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:ps": "docker-compose ps",
    "docker:restart": "docker-compose restart",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "k8s:deploy": "kubectl apply -f k8s/namespace.yaml && kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "db:migrate": "cd server && alembic upgrade head",
    "db:rollback": "cd server && alembic downgrade -1",
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bharadhwajallapuram/Vendly-fastapi-Js.git"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "~19.1.10"
    }
  },
  "keywords": [
    "point-of-sale",
    "react",
    "fastapi",
    "typescript",
    "python",
    "retail",
    "pos-system"
  ],
  "license": "MIT",
  "dependencies": {
    "expo": "~54.0.31",
    "react": "19.1.0",
    "react-native": "0.81.5"
  }
}
