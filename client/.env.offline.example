# Offline Mode Configuration
# Copy this to .env.local and adjust values as needed

# Storage
NEXT_PUBLIC_OFFLINE_QUEUE_KEY=vendly_offline_queue

# Retry logic
NEXT_PUBLIC_OFFLINE_MAX_RETRIES=3

# Timing (in milliseconds)
NEXT_PUBLIC_OFFLINE_RECONNECTION_DELAY=2000
NEXT_PUBLIC_OFFLINE_PERIODIC_SYNC=30000
NEXT_PUBLIC_OFFLINE_SYNC_TIMEOUT=30000

# API Endpoints
NEXT_PUBLIC_OFFLINE_BATCH_SYNC_ENDPOINT=/api/v1/sales/batch-sync
NEXT_PUBLIC_OFFLINE_SINGLE_SYNC_ENDPOINT=/api/v1/sales

# Feature flags
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true
NEXT_PUBLIC_ENABLE_AUTO_SYNC=true
NEXT_PUBLIC_ENABLE_PERIODIC_SYNC=true

# Storage limits
NEXT_PUBLIC_OFFLINE_MAX_QUEUE_SIZE=5000
